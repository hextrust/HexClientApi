{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "declaration": true,
      "outDir": "./built/",
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*",
      "index.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }